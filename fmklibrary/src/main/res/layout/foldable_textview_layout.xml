<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:lineSpacingMultiplier="1.2"/>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/collapsible_flag_tv_height"
        android:layout_below="@id/tv_content_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_expand_toggle"
            android:layout_width="24dp"
            android:layout_height="@dimen/collapsible_flag_tv_height"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_green_arrow_down"/>

        <TextView
            android:id="@+id/tv_expand_flag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/collapsible_flag_tv_height"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            tools:text="展开"/>

    </LinearLayout>

</RelativeLayout>