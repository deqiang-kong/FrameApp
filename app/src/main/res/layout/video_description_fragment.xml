<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_empty_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_00ffffff"
        android:gravity="center"
        android:scrollbars="none"
        android:text="数据被外星人劫走了~~"
        android:visibility="gone"/>

    <com.kong.fmklibrary.controls.magicrecyclerView.MagicRecyclerView
        android:id="@+id/mrv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_00ffffff"
        app:header_layout="@layout/video_description_header"
        app:parallaxMultiplier="0"/>

</RelativeLayout>