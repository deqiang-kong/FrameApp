<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"

    android:foreground="@drawable/ripple_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_item_height"
        android:background="@color/transparent_00ffffff">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="@dimen/news_image_width"
            android:layout_height="@dimen/news_image_height"
            android:layout_margin="@dimen/margin_8dp"
            android:elevation="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/news_image"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_mid" />


        <TextView
            android:id="@+id/tv_news_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            android:layout_toEndOf="@id/news_image"
            android:layout_below="@id/tv_news_title"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_8dp"
            android:layout_below="@id/tv_news_content"
            android:text="新华网"
            android:textSize="@dimen/text_size_min"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
