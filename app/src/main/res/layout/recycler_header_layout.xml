<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_header_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kong.fmklibrary.controls.loopbander.AutoScrollViewPager
            android:id="@+id/scroll_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_header_height"/>

        <com.kong.fmklibrary.controls.loopbander.ViewGroupIndicator
            android:id="@+id/scroll_pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recycler_header_indi_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            indicator:distance_from_two_indicator="@dimen/distance_from_tow_indicator"
            indicator:radius="@dimen/indicator_radius"
            indicator:selected_color="@color/indicator_selected_607D8B"
            indicator:unselected_color="@color/indicator_unselected_607D8B"/>
    </RelativeLayout>
</FrameLayout>
