    <!--layout="@layout/drawer_menu_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_gravity="start" />-->

</android.support.v4.widget.DrawerLayout>